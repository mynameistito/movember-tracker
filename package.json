{
	"name": "shaggedy-movember",
	"version": "1.0.0",
	"description": "Cloudflare Worker to scrape Movember donation amounts using HTML parsing",
	"main": "src/index.ts",
	"scripts": {
		"dev": "wrangler dev --remote",
		"deploy": "wrangler deploy",
		"typecheck": "tsc --noEmit",
		"tail": "bunx wrangler tail --format json",
		"check": "bunx @biomejs/biome check --write .",
		"format": "bunx @biomejs/biome format --write .",
		"tsc": "bunx tsc --noEmit",
		"build:js": "esbuild public/js/movember-scraper.js --bundle --minify --sourcemap --outfile=public/js/bundle.js --format=esm --target=es2020",
		"build": "npm run build:js",
		"test": "vitest",
		"test:ui": "vitest --ui",
		"test:coverage": "vitest --coverage"
	},
	"keywords": [
		"cloudflare",
		"workers",
		"scraper",
		"movember"
	],
	"author": "",
	"license": "MIT",
	"devDependencies": {
		"@biomejs/biome": "^2.3.4",
		"@cloudflare/workers-types": "^4.20251106.1",
		"@vitest/coverage-v8": "^4.0.7",
		"@vitest/ui": "^4.0.7",
		"esbuild": "^0.25.12",
		"happy-dom": "^20.0.10",
		"typescript": "^5.9.3",
		"vitest": "^4.0.7",
		"wrangler": "^4.46.0"
	}
}
